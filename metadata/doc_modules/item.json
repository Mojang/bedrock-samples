{
  "name": "Item",
  "nodes": [
    {
      "description": [
        "Items are defined in a JSON file inside a behavior pack.",
        "All attributes, including item names, must be defined using item components."
      ],
      "header_level": 1,
      "name": "Items",
      "nodes": [
        {
          "description": [
            "Properties are part of the Item Definition. They help the system determine how to parse and initialize the item."
          ],
          "examples": [
            {
              "name": "Example",
              "text": [
                "{",
                "  \"format_version\": \"1.20.20\",",
                "  \"minecraft:item\": {",
                "    \"description\": {",
                "      \"identifier\": \"minecraft:blaze_rod\"",
                "    },",
                "    \"components\": {",
                "      \"minecraft:fuel\": {",
                "        \"duration\": 120.0",
                "      },",
                "      \"minecraft:max_stack_size\": 64,",
                "      \"minecraft:icon\": {",
                "        \"texture\": \"blaze_rod\"",
                "      },",
                "      \"minecraft:hand_equipped\": true,",
                "      \"minecraft:display_name\": {",
                "        \"value\": \"Blaze Rod\"",
                "      }",
                "    }",
                "  }",
                "}"
              ]
            }
          ],
          "examples_print_mode": "code",
          "examples_title": "Code Example",
          "header_level": 2,
          "name": "Item Definition Properties",
          "nodes": [
            {
              "description": [
                "Specifies the version of the game this entity was made in. If the version is lower than the current version, any changes made to the entity in the vanilla version will be applied to it."
              ],
              "header_level": 3,
              "name": "format_version",
              "show_in_index": true
            },
            {
              "description": [
                "Item definition includes the \"description\" and \"components\" sections."
              ],
              "header_level": 3,
              "name": "minecraft:item",
              "show_in_index": true
            }
          ],
          "nodes_as_table": true,
          "show_in_index": true,
          "table_default_title": "Default Value",
          "table_description_title": "Description",
          "table_name_title": "Name",
          "table_type_title": "Type"
        }
      ],
      "nodes_as_table": false,
      "show_in_index": true
    }
  ]
}