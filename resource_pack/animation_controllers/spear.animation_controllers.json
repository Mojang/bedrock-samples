{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.spear.held": {
            "initial_state": "first_person",
            "states": {
                "first_person": {
                    "animations": [ "held_first_person" ],
                    "transitions": [
                        {
                            "third_person": "!c.is_first_person"
                        }
                    ]
                },
                "third_person": {
                    "animations": [ "held_third_person" ],
                    "transitions": [
                        {
                            "first_person": "c.is_first_person"
                        }
                    ]
                }
            }
        },
        "controller.animation.spear.hit": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "hit": "c.owning_entity->query.ticks_since_last_kinetic_weapon_hit >= 0.0 && c.owning_entity->query.ticks_since_last_kinetic_weapon_hit <= 5.0"
                        }
                    ]
                },
                "hit": {
                    "animations": [ "hit" ],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished"
                        }
                    ]
                }
            }
        },
        "controller.animation.spear.sounds": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            // Wait for previous action to finish to avoid playing sounds twice when swapping between spears.
                            "held": "c.owning_entity->v.item_use_normalized == 0.0 && c.owning_entity->v.attack_time == 0.0"
                        }
                    ]
                },
                "held": {
                    "transitions": [
                        {
                            "use": "c.owning_entity->v.item_use_normalized > 0.0"
                        }
                    ]
                },
                "use": {
                    "animations": [ "use_sound" ],
                    "transitions": [
                        {
                            "held": "c.owning_entity->v.item_use_normalized == 0.0"
                        }
                    ]
                }
            }
        }
    }
}
