{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.drowned.attack.rotations": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            {
              "zombie_attack_bare_hand": "!query.is_baby || !query.is_item_equipped(0)"
            },
            {
              "baby_zombie_attack_bare_hand": "query.is_baby && query.is_item_equipped(0)"
            }
          ],
          "transitions": [
            {
              "one_hand_attack": "query.is_item_equipped('off_hand') || variable.is_brandishing_spear"
            }
          ]
        },
        "one_hand_attack": {
          "animations": [
            {
              "attack_rotations": "!query.is_baby || !query.is_item_equipped(0)"
            },
            {
              "baby_attack_rotations": "query.is_baby && query.is_item_equipped(0)"
            }
          ],
          "transitions": [
            {
              "default": "!query.is_item_equipped('off_hand') && !variable.is_brandishing_spear"
            }
          ]
        }
      }
    }
  }
}
