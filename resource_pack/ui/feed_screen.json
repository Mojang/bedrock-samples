        "options_button@feed_common.options_button": {
          "$button_mapping_id": "button.feed_options",
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "$collection_binding_name"
            }
          ]
        }
      },
      {
        "spacing_gap": {
          "type": "panel",
          "size": [ 189, "100%" ]
        }
      }
    ]
