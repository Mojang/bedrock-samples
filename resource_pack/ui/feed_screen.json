  "feed_buttons_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "offset": [ 0, 0 ],
    "size": [ "30%", "30%" ],
    "controls": [
      {
        "like_button@feed_common.like_button": {
          "$button_mapping_id": "button.feed_like",
