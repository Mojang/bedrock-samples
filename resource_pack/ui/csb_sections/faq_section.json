        "faq_question_body_horz_padding_3@csb_faq.faq_question_body_horz_padding": {}
      }
    ]
  },

  "faq_section_header_space": {
    "type": "panel",
    "size": [ "100%", 8 ]
  },

  "faq_section_divider@common.section_divider": {
    "$top_padding_size": [ "100%", 4 ],
