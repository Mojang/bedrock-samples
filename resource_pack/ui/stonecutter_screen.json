  "top_half_stack_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%c", "100%cm" ],
    "controls": [
      {
        "input_slots_holder": {
          "type": "panel",
          "size": [ "100%c", "100%c" ],
          "inherit_max_sibling_height": true,
