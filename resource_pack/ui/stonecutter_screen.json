  "input_slots_stack_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%c", "100%cm" ],
    "controls": [
      { "input_item_slot@stonecutter.input_item_slot": {} }
    ]
  },

