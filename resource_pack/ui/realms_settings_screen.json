            {
              "changes_not_applied_panel": {
                "type": "stack_panel",
                "size": [ "100%", "100%c" ],
                "controls": [
                  {
                    "changes_not_applied_label": {
                      "type": "label",
                      "color": "$light_button_secondary_default_text_color",
