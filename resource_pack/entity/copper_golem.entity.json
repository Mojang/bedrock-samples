      },
      "scripts": {
        "pre_animation": [
          "v.oxidation = query.property('minecraft:oxidation_level');",
          "v.index = (v.oxidation == 'unoxidized') ? 0 : ((v.oxidation == 'exposed') ? 1 : ((v.oxidation == 'weathered') ? 2 : 3 ));",
