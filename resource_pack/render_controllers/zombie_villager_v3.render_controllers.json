{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.zombie_villager_v3_base": {
      "geometry": "query.is_baby? Geometry.baby : Geometry.default",
      "materials": [
        { "*": "Material.default" }
      ],
      "textures": [
        "query.is_baby? Texture.baby_default : Texture.default"
      ]
    },
    "controller.render.zombie_villager_v3_masked": {
      "arrays": {
        "textures": {
          "Array.biomes": [
            "Texture.desert",
            "Texture.jungle",
            "Texture.plains",
            "Texture.savanna",
            "Texture.snow",
            "Texture.swamp",
            "Texture.taiga"
          ],
          "Array.baby_biomes": [
            "Texture.baby_desert",
            "Texture.baby_jungle",
            "Texture.baby_plains",
            "Texture.baby_savanna",
            "Texture.baby_snow",
            "Texture.baby_swamp",
            "Texture.baby_taiga"
          ],
          "Array.professions": [
            "Texture.unskilled",
            "Texture.farmer",
            "Texture.fisherman",
            "Texture.shepherd",
            "Texture.fletcher",
            "Texture.librarian",
            "Texture.cartographer",
            "Texture.cleric",
            "Texture.armorer",
            "Texture.weapon_smith",
            "Texture.tool_smith",
            "Texture.butcher",
            "Texture.leatherworker",
            "Texture.stonemason",
            "Texture.nitwit"
          ]
        }
      },
      "geometry": "query.is_baby? Geometry.baby: Geometry.default",
      "materials": [
        { "*": "query.is_baby ? Material.default : Material.masked" }
      ],
      "textures": [
        "query.is_baby ? Array.baby_biomes[query.mark_variant] : Array.biomes[query.mark_variant]",
        "Array.professions[variable.profession_index]"
      ]
    }
  }
}
