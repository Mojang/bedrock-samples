{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.fox.v2": {
      "arrays": {
        "textures": {
          "Array.skins": ["Texture.red", "Texture.arctic"],
          "Array.baby_skins": ["Texture.baby_red", "Texture.baby_arctic"],
          "Array.baby_sleep": [
            "Texture.baby_sleep_red",
            "Texture.baby_sleep_arctic"
          ]
        }
      },
      "geometry": "query.is_baby ? Geometry.baby : Geometry.default",
      "part_visibility": [
        { "leg*": "!query.is_sleeping" },
        { "head": "(!query.is_sleeping && !query.is_baby) || query.is_baby" },
        { "head_sleeping": "query.is_sleeping && !query.is_baby" }
      ],
      "materials": [{ "*": "Material.default" }],
      "textures": [
        "query.is_baby ? query.is_sleeping ? Array.baby_sleep[query.variant] : Array.baby_skins[query.variant] : Array.skins[query.variant]"
      ]
    }
  }
}
