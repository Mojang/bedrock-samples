{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.villager_v3_base": {
      "arrays": {
        "textures": {
          "Array.skins": [
            "Texture.base",
            "Texture.base2",
            "Texture.base3",
            "Texture.base4",
            "Texture.base5",
            "Texture.base6"
          ],
          "Array.baby_skins": [
            "Texture.baby_base",
            "Texture.baby_base2",
            "Texture.baby_base3",
            "Texture.baby_base4",
            "Texture.baby_base5",
            "Texture.baby_base6"
          ]
        }
      },
      "geometry": "query.is_baby ? Geometry.baby : Geometry.default",
      "materials": [
        { "*": "Material.default" }
      ],
      "textures": [
        "query.is_baby ? Array.baby_skins[query.skin_id] : Array.skins[query.skin_id]"
      ]
    },
    "controller.render.villager_v3_masked": {
      "arrays": {
        "textures": {
          "Array.biomes": [
            "Texture.plains",
            "Texture.desert",
            "Texture.jungle",
            "Texture.savanna",
            "Texture.snow",
            "Texture.swamp",
            "Texture.taiga"
          ],
          "Array.baby_biomes": [
            "Texture.baby_plains",
            "Texture.baby_desert",
            "Texture.baby_jungle",
            "Texture.baby_savanna",
            "Texture.baby_snow",
            "Texture.baby_swamp",
            "Texture.baby_taiga"
          ],
          "Array.professions": [
            "Texture.unskilled",
            "Texture.farmer",
            "Texture.fisherman",
            "Texture.shepherd",
            "Texture.fletcher",
            "Texture.librarian",
            "Texture.cartographer",
            "Texture.cleric",
            "Texture.armorer",
            "Texture.weapon_smith",
            "Texture.tool_smith",
            "Texture.butcher",
            "Texture.leatherworker",
            "Texture.stonemason",
            "Texture.nitwit"
          ]
        }
      },
      "geometry": "query.is_baby ? Geometry.baby : Geometry.default",
      "materials": [
        { "*": "(query.is_baby || variable.profession_index == 0) ? Material.default : Material.masked" }
      ],
      "textures": [
        "query.is_baby ? Array.baby_biomes[query.mark_variant] : Array.biomes[query.mark_variant]",
        "Array.professions[variable.profession_index]"
      ]
    },
    "controller.render.villager_v3_level": {
      "arrays": {
        "textures": {
          "Array.levels": [
            "Texture.level_stone",
            "Texture.level_iron",
            "Texture.level_gold",
            "Texture.level_emerald",
            "Texture.level_diamond"
          ]
        }
      },
      "rebuild_animation_matrices": true,
      "geometry": "Geometry.default",
      // If we are not babies, unskilled, or nitwits we can have a job level
      "part_visibility": [ { "*": "!query.is_baby && variable.profession_index != 0 && variable.profession_index != 14" } ],
      "materials": [
        { "*": "Material.default" }
      ],
      "textures": [
        "Array.levels[variable.level_index]"
      ]
    }
  }
}
