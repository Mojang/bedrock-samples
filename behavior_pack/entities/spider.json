        "minecraft:behavior.leap_at_target": {
          "must_be_on_ground": false,
          "priority": 4,
          "yd": 0.4
        },
        "minecraft:behavior.melee_box_attack": {
          "track_target": true,
          "priority": 3
        }
      },
      "minecraft:spider_hostile": {
        "minecraft:behavior.nearest_attackable_target": {
          "attack_interval": {
            "min": 5,
            "max": 5
          },
          "must_see": true,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "snowgolem"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "irongolem"
                  }
                ]
              }
            }
          ],
          "priority": 2
        },
        "minecraft:environment_sensor": {
          "triggers": {
            "event": "minecraft:become_neutral",
            "filters": {
              "operator": ">",
