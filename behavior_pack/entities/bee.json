          "remove_effects": "wither"
        },
        "minecraft:behavior.timer_flag_1": {
          "priority": 0,
          "cooldown_range": 0.0,
          "duration_range": [ 0.05, 0.05 ],
          "on_end": {
            "event": "minecraft:on_wither_effect_added",
            "target": "self"
          }
        }
      }
    },

