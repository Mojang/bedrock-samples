    "events": {
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "randomize": [
              {
                "weight": 95,
                "add": {
                  "component_groups": [
                    "bee_adult"
                  ]
                }
              },
              {
                "weight": 5,
                "add": {
                  "component_groups": [
                    "bee_baby"
