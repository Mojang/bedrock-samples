          ]
        }
      },
      "minecraft:ageable_grow_up": {
        "remove": {
          "component_groups": [
            "bee_baby"
          ]
        },
        "add": {
          "component_groups": [
            "bee_adult"
          ]
        }
      },
      "minecraft:exited_disturbed_hive": {
        "add": {
          "component_groups": [
            "take_nearest_target"
          ]
        },
        "remove": {
          "component_groups": [
            "find_hive",
            "return_to_home",
