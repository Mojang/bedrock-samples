{
  "format_version": "1.21.130",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:zombie",
      "spawn_category": "monster",
      "is_spawnable": true,
      "is_summonable": true,
      "properties": {
        "minecraft:is_riding_zombie_horse": {
          "type": "bool",
          "default": false,
          "client_sync": false
        }
      }
    },

    "component_groups": {
      "minecraft:look_to_start_drowned_transformation": {
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "filters": {
                "test": "is_underwater"
              },
              "event": "minecraft:start_transforming"
            },
            // Keep these the same for each "minecraft:environment_sensor".
            {
              "filters": {
                "all_of": [
                  { "test": "is_vehicle_family", "value": "zombiehorse" },
                  { "test": "bool_property", "domain": "minecraft:is_riding_zombie_horse", "value": false }
                ]
              },
              "event": "minecraft:on_start_riding_zombie_horse"
            },
            {
              "filters": {
                "all_of": [
                  { "test": "is_vehicle_family", "operator": "not", "value": "zombiehorse" },
                  { "test": "bool_property", "domain": "minecraft:is_riding_zombie_horse" }
                ]
              },
              "event": "minecraft:on_stop_riding_zombie_horse"
            }
          ]
        }
      },
      "minecraft:start_drowned_transformation": {
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "filters": {
                "test": "is_underwater", "value": false
              },
              "event": "minecraft:stop_transforming"
            },
            // Keep these the same for each "minecraft:environment_sensor".
            {
              "filters": {
                "all_of": [
                  { "test": "is_vehicle_family", "value": "zombiehorse" },
                  { "test": "bool_property", "domain": "minecraft:is_riding_zombie_horse", "value": false }
                ]
              },
              "event": "minecraft:on_start_riding_zombie_horse"
            },
            {
              "filters": {
                "all_of": [
                  { "test": "is_vehicle_family", "operator": "not", "value": "zombiehorse" },
                  { "test": "bool_property", "domain": "minecraft:is_riding_zombie_horse" }
                ]
              },
              "event": "minecraft:on_stop_riding_zombie_horse"
            }
          ]
        },
        "minecraft:timer": {
          "looping": false,
          "time": 30,
          "time_down_event": {
            "event": "minecraft:convert_to_drowned"
          }
        }
      },
      "minecraft:convert_to_drowned": {
        "minecraft:transformation": {
          "into": "minecraft:drowned<minecraft:as_adult>",
          "transformation_sound": "convert_to_drowned",
          "drop_equipment": true,
          "delay": {
            "value": 15
