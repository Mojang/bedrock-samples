{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "minecraft:zombie_horse",
      "population_control": "monster"
    },
    "conditions": [
      {
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_on_block_filter": "minecraft:grass",
        "minecraft:brightness_filter": {
          "min": 0,
          "max": 7,
          "adjust_for_weather": true
        },
        "minecraft:weight": {
          "default": 5
        },
        "minecraft:herd": {
          "min_size": 1,
          "max_size": 1,
          "initial_event": "minecraft:spawn_adult_with_rider",
          "spawn_event": "minecraft:entity_spawned",
          "initial_event_count": 1
        },
        "minecraft:biome_filter": {
            "any_of": [
                {
                    "test": "has_biome_tag",
                    "operator": "==",
                    "value": "savanna"
                },
                {
                    "test": "has_biome_tag",
                    "operator": "==",
                    "value": "plains"
                },
                {
                    "test": "has_biome_tag",
                    "operator": "==",
                    "value": "ice_plains"
                }
            ]
            
        }
      }
    ]
  }
}
