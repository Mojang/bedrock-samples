{
    "format_version": "1.21.100",
    "minecraft:item": {
        "description": {
            "identifier": "minecraft:stone_spear"
        },

        "components": {
            "minecraft:icon": {
                "textures": {
                    "default": "stone_spear"
                }
            },
            "minecraft:display_name": {
                "value": "item.stone_spear.name"
            },
            "minecraft:tags": {
                "tags": [ "minecraft:stone_tier", "minecraft:spear" ]
            },
            "minecraft:max_stack_size": 1,
            "minecraft:durability": {
                "max_durability": 130
            },
            "minecraft:repairable": {
                "repair_items": [
                    {
                        "items": [ "minecraft:stone_spear" ],
                        "repair_amount": "context.other->query.remaining_durability"
                    },
                    {
                        "items": [ { "tags": "q.all_tags('minecraft:stone_tool_materials')" } ],
                        "repair_amount": "query.max_durability * 0.25"
                    }
                ]
            },
            "minecraft:enchantable": {
                "slot": "melee_spear",
                "value": 5
            },
            "minecraft:hand_equipped": {
                "value": true
            },
            "minecraft:use_modifiers": {
                "use_duration": 72000,
                "emit_vibrations": false,
                "movement_modifier": 1.0
            },
            "minecraft:cooldown": {
                "category": "spear",
                // Should match "swing_duration"'s "value".
                "duration": 0.7,
                "type": "attack"
            },
            "minecraft:swing_duration": {
                // Should match "cooldown"'s "duration".
                "value": 0.7
            },
            "minecraft:swing_sounds": {
                "attack_miss": "item.spear.attack_miss",
                "attack_hit": "item.spear.attack_hit"
            },
            "minecraft:damage": {
                "value": 2
            },
            "minecraft:piercing_weapon": {
                "reach": {
                    "min": 2.0,
                    "max": 4.5
                },
                "hitbox_margin": 0.25
            },
            "minecraft:kinetic_weapon": {
                "delay": 14,
                "reach": {
                    "min": 2.0,
                    "max": 4.5
                },
                "hitbox_margin": 0.25,
                "damage_multiplier": 0.82,
                "damage_conditions": {
                    "max_duration": 275,
                    "min_relative_speed": 4.6
                },
                "knockback_conditions": {
                    "max_duration": 110,
                    "min_speed": 5.1
                },
                "dismount_conditions": {
                    "max_duration": 90,
                    "min_speed": 13.0
                }
            }
        }
    }
}
